@model HirmudeMaja.Models.Seikleja

@{
    ViewData["Title"] = "Registeeri";
}

<h1>Registeeri Hirmude maija </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registeeri">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Eesnimi" class="control-label"></label>
                <input asp-for="Eesnimi" class="form-control" />
                <span asp-validation-for="Eesnimi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registeeri" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="StatistikaLeht">Tagasi statistika lehte</a>
</div>
