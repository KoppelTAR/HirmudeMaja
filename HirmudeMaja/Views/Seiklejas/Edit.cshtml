@model HirmudeMaja.Models.Seikleja

@{
    ViewData["Title"] = "Edit";
}

<h1>Muuda</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Eesnimi" class="control-label"></label>
                <input asp-for="Eesnimi" class="form-control" />
                <span asp-validation-for="Eesnimi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sisenemisaeg" class="control-label"></label>
                <input asp-for="Sisenemisaeg" class="form-control" />
                <span asp-validation-for="Sisenemisaeg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Väljumisaeg" class="control-label"></label>
                <input asp-for="Väljumisaeg" class="form-control" />
                <span asp-validation-for="Väljumisaeg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvesta" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="StatistikaLeht">Tagasi statistika lehele</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
